{% extends '::base.html.twig' %}

{% block body %}
<div class="listings">
    {% for listing in listings %}
    {% set rooms = listing.num_bedrooms %}
    {% set title = rooms ~ " Bedroom " ~ listing.property_type ~ " - " ~ listing.street_name ~ ", " ~ listing.outcode %}
    <article>
        <div class="row">
            <div class="listing col-md-12">
                <h2>
                    <a href="{{ listing.details_url }}" target="_blank">
                    {{ title }}
                    </a>
                </h2>
                <div class="col-md-2"><img src="{{ listing.image_url }}" alt="{{ title }}" width="180px"></div>
                <div class="col-md-8"><p>{{ listing.short_description|raw }}</p></div>
                <ul class="list-unstyled col-md-2">
                    <li>£{{ listing.average_price_pw|number_format(2, '.', ',') }}<strong>pw</strong></li>
                    <li>£{{ listing.average_price_pcm|number_format(2, '.', ',') }}<strong>pcm</strong></li>
                </ul>
                <div class="clearfix"></div>
                <div class="list-unstyled col-md-2">
                    <p><em>Last updated:</em>{{ listing.last_published_date|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
    </article>
    {% endfor %}
</div>
{% endblock %}
